<%= form_with(model: [game, owner], class: "contents") do |form| %>
  <% if owner.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

      <ul>
        <% owner.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="items-center">
    <h2>オーナーID(編集不可)</h2>
    <p class="mb-2">
      <%= form.text_field :name, readonly: true %>
    </p>
    <p class="mb-2">
      <%= form.label :password, 'ふっかつのじゅもん（編集可、20文字まで', class: 'block' %>
      <%= form.text_field :password, required: true, max_length: 20, class: 'w-full' %>
    </p>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
