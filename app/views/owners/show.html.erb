<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="flex flex-col justify-between items-center">
      <h1 class="font-bold text-4xl">主催者情報詳細</h1>

      <div id="<%= dom_id @owner %>">
        <%= @owner.name %>
      </div>
      <%= link_to 'Edit this owner', edit_game_owner_path(@game, @owner), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Back to owners', game_owners_path(@game), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
