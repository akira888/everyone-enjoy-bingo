<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="flex flex-col justify-between items-center">
      <h1 class="font-bold text-4xl">ゲームを始める準備が整いました！</h1>
      <%= link_to 'まずは参加者を募りましょう', waiting_game_path(@game), data: {turbo_method: "patch"},  class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
